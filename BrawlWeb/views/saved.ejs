<%- include('partials/header') %>

<h1>Saved Players</h1>

<% if (players.length === 0) { %>
  <p>You haven’t saved anyone yet. Search a player and click “Save”.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>Tag</th>
        <th>Name</th>
        <th>Trophies</th>
        <th>Note</th>
        <th>Added</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% players.forEach(p => { %>
      <tr>
        <td><%= p.tag %></td>
        <td><%= p.name %></td>
        <td><%= p.trophies %></td>
        <td><%= p.note %></td>
        <td><%= p.created_at %></td>
        <td class="actions">
          <a href="/saved/<%= p.id %>/edit">Edit</a>
          <form action="/saved/<%= p.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this record?')" style="display:inline-block">
            <button type="submit">Delete</button>
          </form>
          <form action="/saved/<%= p.id %>/refresh" method="POST" style="display:inline-block">
            <button type="submit">Refresh</button>
          </form>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
<% } %>

<%- include('partials/footer') %>
